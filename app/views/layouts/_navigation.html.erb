<nav class="navbar navbar-default" role="navigation">
  <div class="container">
    <div class="row">
      <div class="col-xs-1 col-xs-offset-1">
        <div class="navbar-header">
          <%= link_to "Eds Kingdom", '/', id: "navbar-brand-main", class: "navbar-brand" %>
        </div>
      </div>
      <div class="col-xs-5">
        <%= Category.find_each do |category| %>
          <div class="navbar-header">
            <%= link_to category.category.upcase, "/categories/#{category.id}", 
              {id: "navCategory"+category.id.to_s, class: "navCategory navbar-brand"} %>
          </div>
        <% end %>
      </div>

      <div class="col-xs-4">

        <span class="pull-right">
          <% if current_user %>
            <div class="navbar-header">
              <p class="navbar-brand navbar-brand-static"> 
                Welcome <%= current_user.email %> 
              </p>
            </div>
            <% if admin_user %>
              <div class="navbar-header">
                <%= link_to "DASHBOARD", '/admin', class: "navbar-brand" %>
              </div>
            <% end %>
            <div class="navbar-header">
              <%= link_to "LOGOUT", '/logout', class: "navbar-brand" %>
            </div>
          <% else %>
            <div class="navbar-header">
              <%= link_to 'LOGIN', '/login', class: "navbar-brand" %>  
            </div>
            <div class="navbar-header">
              <p class="navbar-brand navbar-brand-static"> | </p>
            </div>
            <div class="navbar-header">
              <%= link_to 'REGISTER', '/signup', class: "navbar-brand" %>
            </div>
          <% end %>
          <div class="navbar-header">
            <%= link_to image_tag("shopping-cart.png", size: "18x18"),
                '/cart', class: "navbar-brand" %>
          </div>
        </span>
      </div>
    </div>
  </div>
</nav>

