<div>
    FILTER
    <br>
    <br>    
    <%= form_tag do %>
        Brand: <br>
        <%= select_tag "brand", options_from_collection_for_select(Brand.all, "id", "brand"), {class: "form-control"} %>
        <br>
        Size: <br>
        <%= select_tag "size", options_from_collection_for_select(ShoeSize.all.order(:size), "id", "size"), {class: "form-control"} %>
        <br>
        Color: <br>
        <%= select_tag "color", options_from_collection_for_select(Color.all, "id", "color"), {class: "form-control"} %>
        <br>
        Style: <br>
        <%= select_tag "style", options_from_collection_for_select(Style.all, "id", "style"), {class: "form-control"} %>
        <br>
        Price: <br>
        <%= select_tag "price_range", {}, {class: "form-control"} %>
        <br>
    <% end %>
</div>