<div id="gallery">
    <img src="http://wallpaper-house.com/data/out/12/wallpaper2you_487079.jpg" width="100%" height="450px">
</div>

<div class="container" id="index-page">
    <div class="row">
    </div>
    <br>
    <div class="row">
        <div class="col-xs-2 col-xs-offset-5">
            <div id="brand_select">
                Featured Products <br>
                <%= select_tag "brand", 
                options_from_collection_for_select(@brands, "id", "brand"), 
                {id: 'indexBrandSelect', class: "form-control index-select-brand"} %>
            </div>
        </div>
    </div>

    <div class="row">
        <div id='indexShoeTable' class="col-xs-8 col-xs-offset-2">
            <%= render partial: "shoesTable", locals: {title: 'none'} %>
        </div>
    </div>
</div>

<script>
    $('#indexBrandSelect').on('change', function(){
        $.ajax({ type: "GET",
            url: '/'.js,
            data: { sort: $('option:selected', this).val() },
            dataType: 'script'
        }).done(function(data) {
            
        });
    });
</script>




